.chat_main__message
  .chat_main__message__header
    .chat_main__message__header__group
      .chat_main__message__header__groupName
        = @group.name
      .chat_main__message__header__memberList 
        Member :
        .chat_main__message__header__memberLists
          - @group.users.each do |user|
            = user.name
    .chat_main__message__header__editButton
      = link_to edit_group_path(@group) do
        Edit
  .chat_main__message__main_messages
    = render @messages
  .chat_main__message__footer
    = form_with model: [@group, @message], html: {class: "input-box"}, local: true do |f|
      .input-box
        = f.text_field :content , class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

